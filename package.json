{
  "name": "webdriverio-mocha-framework",
  "version": "1.0.0",
  "description": "WebdriverIO v7 UI Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "wdio tests/config/wdio.conf.ts",
    "cross-browser": "wdio tests/config/wdio.conf.cross-browser.ts",
