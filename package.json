    "@wdio/spec-reporter": "^8.36.1",
    "allure-commandline": "^2.28.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "wdio-docker-service": "^3.2.1"
  },
  "dependencies": {
    "npm-check-updates": "^16.14.18"
